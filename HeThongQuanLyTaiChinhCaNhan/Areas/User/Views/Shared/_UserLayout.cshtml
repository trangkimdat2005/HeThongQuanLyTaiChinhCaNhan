<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MoneyMaster - User</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/user/css/Layout.css" />

</head>

<body>
    @Html.AntiForgeryToken()
    <div id="wrapper">

        <div id="sidebar-wrapper">
            <div class="sidebar-heading">
                <i class="fas fa-coins me-2"></i> MoneyMaster
            </div>

            <div class="list-group list-group-flush">
                
                <a class="list-group-item list-group-item-action" asp-area="User" asp-controller="Dashboard" asp-action="Index">
                    <i class="fas fa-tachometer-alt"></i> Tổng Quan
                </a>

                <div class="sidebar-divider">Quản lý tài chính</div>

                <a class="list-group-item list-group-item-action" asp-area="User" asp-controller="Transactions" asp-action="Index">
                    <i class="fas fa-file-invoice-dollar"></i> Sổ Thu Chi
                </a>
                <a class="list-group-item list-group-item-action" asp-area="User" asp-controller="Wallets" asp-action="Index">
                    <i class="fas fa-wallet"></i> Ví Của Tôi
                </a>
                <a class="list-group-item list-group-item-action" asp-area="User" asp-controller="Budgets" asp-action="Index">
                    <i class="fas fa-chart-pie"></i> Ngân Sách
                </a>
                <a class="list-group-item list-group-item-action" asp-area="User" asp-controller="Goals" asp-action="Index">
                    <i class="fas fa-bullseye"></i> Mục Tiêu
                </a>

                <div class="sidebar-divider">Cá nhân</div>

                <a class="list-group-item list-group-item-action" asp-area="User" asp-controller="Categories" asp-action="Index">
                    <i class="fas fa-tags"></i> Danh Mục
                </a>
                <a class="list-group-item list-group-item-action" asp-area="User" asp-controller="Tickets" asp-action="Index">
                    <i class="fas fa-headset"></i> Hỗ Trợ
                </a>
                <a class="list-group-item list-group-item-action" asp-area="User" asp-controller="Profile" asp-action="Index">
                    <i class="fas fa-user-circle"></i> Hồ Sơ
                </a>
            </div>

            <div class="mt-auto p-3 border-top bg-white">
                <a href="#" id="logout-user" class="btn btn-outline-danger w-100 fw-bold shadow-sm">
                    <i class="fas fa-sign-out-alt me-2"></i> Đăng Xuất
                </a>
            </div>
        </div>

        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand navbar-user">
                <div class="container-fluid">
                    <button class="btn btn-light text-primary border" id="menu-toggle">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="d-none d-md-block ms-3">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0" placeholder="Tìm kiếm...">
                            <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                        </div>
                    </div>

                    <div class="ms-auto d-flex align-items-center">


                        <div class="">
                            <a class="nav-link d-flex align-items-center" >
                                <span id="navFullName" class="me-2 d-none d-lg-block text-dark fw-bold small">Đang tải...</span>
                                <img id="navAvatar" src="" class="avatar-img rounded-circle" style="width: 40px; height: 40px;">
                            </a>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container-fluid px-4 py-4" id="main-content">

                @RenderBody()

            </div>

            <footer class="mt-auto bg-white p-3 text-center text-muted small border-top">
                &copy; 2026 MoneyMaster. All rights reserved.
            </footer>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


    <script src="~/user/js/Layout.js"></script>

    @RenderSection("Scripts", required: false)

</body>

</html>