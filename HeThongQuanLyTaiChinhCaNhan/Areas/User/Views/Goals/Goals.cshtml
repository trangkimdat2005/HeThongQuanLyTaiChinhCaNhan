@model List<HeThongQuanLyTaiChinhCaNhan.Models.Goal>

<link href="~/user/css/Goals.css" rel="stylesheet" />


<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold text-dark mb-0">Mục Tiêu Tài Chính</h3>
        <p class="text-muted small mb-0">Tích lũy cho những dự định tương lai</p>
    </div>
    <button class="btn btn-primary shadow-sm fw-bold rounded-pill px-4" onclick="openGoalModal('add')" >
        <i class="fas fa-plus me-2"></i> Tạo Mục Tiêu
    </button>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm bg-primary text-white h-100 overflow-hidden position-relative">
            <div class="card-body">
                <div class="text-white-50 small text-uppercase fw-bold">Tổng Tiền Đã Tiết Kiệm</div>
                <h2 class="fw-bold mb-0 mt-2" id="totalSavedDisplay">0 đ</h2>
                <i class="fas fa-piggy-bank position-absolute opacity-25" style="font-size: 5rem; bottom: -10px; right: 10px;"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <div class="text-muted small text-uppercase fw-bold">Tiến độ chung</div>
                    <h2 class="fw-bold text-dark mb-0 mt-2" id="totalProgressDisplay">0%</h2>
                </div>
                <div >
                    <canvas id="overallProgressChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4" id="goalList">
    <!-- Goals will be rendered here by JavaScript -->
</div>

<div class="modal fade" id="goalModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold text-primary" id="goalModalTitle">Mục Tiêu Mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-3">
                <form id="goalForm">
                    <input type="hidden" id="goalID">

                    <div class="mb-3">
                        <label class="form-label fw-bold small">Tên Mục Tiêu <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="goalName" placeholder="VD: Mua Laptop, Du lịch..." required maxlength="100">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small">Số Tiền Cần Đạt (Target) <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <input type="text" 
                                   class="form-control fw-bold text-primary text-end" 
                                   id="targetAmount" 
                                   placeholder="0" 
                                   required
                                   inputmode="numeric"
                                   autocomplete="off"
                                   pattern="[0-9.,]*">
                            <span class="input-group-text bg-light text-muted fw-bold">VNĐ</span>
                        </div>
                        <div class="form-text small text-muted">
                            <i class="fas fa-coins me-1"></i>
                            Số tiền bạn muốn đạt được cho mục tiêu này. Nhập số sẽ tự động format (VD: 10.000.000)
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small">Trạng thái</label>
                        <select class="form-select" id="goalStatus">
                            <option value="Đang thực hiện">Đang thực hiện</option>
                            <option value="Tạm dừng">Tạm dừng</option>
                            <option value="Hoàn thành">Hoàn thành</option>
                        </select>
                    </div>

                    <div class="text-end mt-4 pt-2 border-top">
                        <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary px-4 fw-bold shadow-sm">
                            <i class="fas fa-save me-2"></i>Lưu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="depositModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-success text-white border-0">
                <h5 class="modal-title fw-bold"><i class="fas fa-coins me-2"></i>Nạp Tiết Kiệm</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form id="depositForm">
                    <input type="hidden" id="depositGoalID">

                    <div class="text-center mb-4 p-3 bg-light rounded">
                        <div class="small text-muted mb-1">Đang nạp vào:</div>
                        <div class="fw-bold text-success fs-4" id="depositGoalName">...</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Lấy tiền từ Ví <span class="text-danger">*</span></label>
                        <select class="form-select" id="depositWallet" required>
                            @if (ViewBag.Wallets != null && ((List<HeThongQuanLyTaiChinhCaNhan.Models.Wallet>)ViewBag.Wallets).Count > 0)
                            {
                                @foreach (var wallet in (List<HeThongQuanLyTaiChinhCaNhan.Models.Wallet>)ViewBag.Wallets)
                                {
                                    <option value="@wallet.WalletId">
                                        @wallet.WalletName (Dư: @((wallet.Balance ?? 0).ToString("N0"))đ)
                                    </option>
                                }
                            }
                            else
                            {
                                <option value="">Không có ví nào</option>
                            }
                        </select>
                        @if (ViewBag.Wallets == null || ((List<HeThongQuanLyTaiChinhCaNhan.Models.Wallet>)ViewBag.Wallets).Count == 0)
                        {
                            <div class="form-text text-danger small">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                Vui lòng tạo ví trước khi nạp tiền.
                            </div>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Số tiền nạp <span class="text-danger">*</span></label>
                        <div class="input-group input-group-lg">
                            <input type="text" class="form-control fw-bold text-success text-end fs-4" 
                                   id="depositAmount" placeholder="0" required>
                            <span class="input-group-text bg-success text-white fw-bold">VNĐ</span>
                        </div>
                        <div class="form-text text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Số tiền sẽ được trừ từ ví đã chọn
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Trạng thái sau khi nạp <span class="text-danger">*</span></label>
                        <select class="form-select" id="depositStatus" required>
                            <option value="Đang thực hiện" selected>Đang thực hiện</option>
                            <option value="Tạm dừng">Tạm dừng</option>
                        </select>
                        <div class="form-text small text-info">
                            <i class="fas fa-info-circle me-1"></i>
                            Chọn trạng thái mục tiêu sau khi nạp tiền. Mặc định là "Đang thực hiện".
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Ghi chú (Tùy chọn)</label>
                        <textarea class="form-control" id="depositNote" 
                                  placeholder="VD: Để dành tháng 1" rows="2" maxlength="255"></textarea>
                    </div>

                    <button type="submit" class="btn btn-success w-100 py-3 fw-bold shadow-sm">
                        <i class="fas fa-check-circle me-2"></i>Xác Nhận Nạp
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    var serverWallets = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
                ViewBag.Wallets ?? new List<HeThongQuanLyTaiChinhCaNhan.Models.Wallet>(),
                new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase }
        ));

    var hasWallets = serverWallets && serverWallets.length > 0;

    console.log('Goals page initialized');
    console.log('serverWallets:', serverWallets);
    console.log('hasWallets:', hasWallets);
</script>
@section Scripts
{
    <script src="~/user/js/Goals.js"></script>
}