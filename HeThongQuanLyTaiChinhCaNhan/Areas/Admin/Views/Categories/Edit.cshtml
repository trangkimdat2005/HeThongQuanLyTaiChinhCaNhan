@model HeThongQuanLyTaiChinhCaNhan.Models.Category
@{
    ViewData["Title"] = "Cập Nhật Danh Mục";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-dark mb-1">Cập Nhật Danh Mục</h3>
            <p class="text-muted small mb-0">Chỉnh sửa thông tin danh mục #@Model.CategoryId</p>
        </div>
        <a href="/Admin/Categories" class="btn btn-outline-secondary px-3">
            <i class="fas fa-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    <form id="editCategoryForm">
        @Html.AntiForgeryToken()
        <input type="hidden" id="catID" value="@Model.CategoryId" />

        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase tracking-wider">Loại Giao Dịch</label>
                            <div class="transaction-type-switcher p-1 bg-light rounded-3 d-flex">
                                <input type="radio" name="Type" id="typeExpense" value="Expense" class="btn-check" @(Model.Type == "Expense" ? "checked" : "")>
                                <label class="btn btn-type-toggle w-100 rounded-3 py-2" for="typeExpense">
                                    <i class="fas fa-shopping-cart me-2"></i>Khoản Chi
                                </label>

                                <input type="radio" name="Type" id="typeIncome" value="Income" class="btn-check" @(Model.Type == "Income" ? "checked" : "")>
                                <label class="btn btn-type-toggle w-100 rounded-3 py-2" for="typeIncome">
                                    <i class="fas fa-money-bill-wave me-2"></i>Khoản Thu
                                </label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-7 mb-4">
                                <label class="form-label fw-bold small text-uppercase">Tên Danh Mục</label>
                                <input asp-for="CategoryName" type="text" class="form-control form-control-lg border-2 shadow-none" id="catName" value="@Model.CategoryName" required>
                            </div>
                            <div class="col-md-5 mb-4">
                                <label class="form-label fw-bold small text-uppercase">Màu Sắc</label>
                                <div class="input-group">
                                    <input asp-for="Color" type="color" class="form-control form-control-color border-2 w-25" id="catColor">
                                    <input type="text" class="form-control border-2 bg-light fw-mono" id="colorCode" value="@Model.Color.ToUpper()" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase">Chọn Biểu Tượng Mới</label>
                            <div class="icon-selector-grid p-3 border rounded-4 bg-light overflow-auto" style="max-height: 250px;">
                                <div id="iconList" class="row row-cols-4 row-cols-md-6 g-3 text-center">
                                </div>
                                <input asp-for="Icon" type="hidden" id="catIcon">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 20px;">
                    <div class="card-header bg-white py-3 border-0">
                        <h6 class="fw-bold mb-0">Xem trước hiển thị</h6>
                    </div>
                    <div class="card-body p-4 pt-0">
                        <div class="preview-card p-3 rounded-4 border shadow-sm mb-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <div id="previewBox" class="icon-box-lg shadow-sm me-3"
                                         style="background-color: @Model.Color; width: 50px; height: 50px; display: flex; align-items: center; justify-content: center; border-radius: 12px; transition: all 0.3s ease;">
                                        <i id="previewIcon" class="fas @Model.Icon text-white fa-lg"></i>
                                    </div>
                                    <div>
                                        <h6 class="fw-bold mb-0" id="previewName">@Model.CategoryName</h6>
                                        <small class="text-muted" id="previewTypeText">@(Model.Type == "Income" ? "Khoản thu" : "Khoản chi")</small>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <div id="previewAmount" class="fw-bold"></div>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary py-3 fw-bold rounded-3 shadow">
                                <i class="fas fa-save me-2"></i>Lưu Thay Đổi
                            </button>
                            <a href="/Admin/Categories" class="btn btn-light py-2">Hủy bỏ</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    .transaction-type-switcher .btn-check:checked + .btn-type-toggle {
        background-color: #fff;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        color: var(--theme-color, #dc3545);
        font-weight: bold;
    }

    .btn-type-toggle {
        border: none;
        color: #6c757d;
        transition: all 0.2s;
    }

    .icon-item {
        cursor: pointer;
        padding: 15px;
        border-radius: 10px;
        transition: all 0.2s;
        border: 2px solid transparent;
    }

        .icon-item:hover {
            background-color: #fff;
        }

        .icon-item.active {
            background-color: #fff;
            border-color: var(--theme-color, #dc3545);
            color: var(--theme-color, #dc3545);
        }

    .fw-mono {
        font-family: 'Courier New', Courier, monospace;
    }
</style>

@section Scripts {
    <script src="~/admin/js/editCategories.js"></script>
}