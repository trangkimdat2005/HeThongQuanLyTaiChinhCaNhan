@model IEnumerable<HeThongQuanLyTaiChinhCaNhan.Models.Ticket>

@{
    ViewData["Title"] = "Hỗ Trợ Khách Hàng";
}
<link href="~/admin/css/support.css" rel="stylesheet" />

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold text-dark mb-0">Hỗ Trợ Khách Hàng</h3>
        <p class="text-muted small mb-0">Tiếp nhận và xử lý yêu cầu từ người dùng</p>
    </div>
    <div class="d-flex gap-2">
        <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill border border-danger">
            <i class="fas fa-exclamation-circle me-1"></i> @Model.Count(x => x.Status == "Open") Chờ xử lý
        </span>
    </div>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body py-3">
        <div class="row g-3 align-items-center">
            <div class="col-md-3">
                <label class="small text-muted fw-bold">Trạng thái:</label>
                <select class="form-select border-0 bg-light fw-bold" id="filterStatus">
                    <option value="">-- Tất cả --</option>
                    <option value="Open" class="text-danger">Chưa xử lý (Open)</option>
                    <option value="Pending" class="text-warning">Đang chờ (Pending)</option>
                    <option value="Resolved" class="text-success">Đã xong (Resolved)</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="small text-muted fw-bold">Loại vấn đề:</label>
                <select class="form-select border-0 bg-light fw-bold" id="filterType">
                    <option value="">-- Tất cả --</option>
                    <option value="Technical Issue">Lỗi kỹ thuật</option>
                    <option value="Account">Tài khoản</option>
                    <option value="Payment">Thanh toán</option>
                </select>
            </div>
            <div class="col-md-6 text-end">
                <button class="btn btn-light text-primary fw-bold" onclick="window.location.reload()">
                    <i class="fas fa-sync-alt me-1"></i> Làm mới
                </button>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <table id="tableTicket" class="table table-hover align-middle" style="width:100%">
            <thead class="bg-light">
                <tr>
                    <th style="width: 50px;">ID</th>
                    <th>Người gửi (User)</th>
                    <th>Vấn đề (Type)</th>
                    <th>Nội dung tóm tắt</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th class="text-end">Xử lý</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        var avatarUrl = !string.IsNullOrEmpty(item.User?.AvatarUrl) ? item.User.AvatarUrl : $"https://ui-avatars.com/api/?name={item.User?.FullName}&background=random";

                        <tr>
                            <td><span class="fw-bold text-muted">#@item.TicketId</span></td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@avatarUrl" class="rounded-circle me-2" width="30">
                                    <div>
                                        <div class="fw-bold text-dark" style="font-size: 0.9rem;">@(item.User?.FullName ?? "Unknown")</div>
                                        <div class="text-muted small" style="font-size: 0.75rem;">@(item.User?.Email)</div>
                                    </div>
                                </div>
                            </td>
                            <td><span class="badge bg-light text-dark border">@item.QuestionType</span></td>
                            <td>
                                @{
                                    var shortDesc = item.Description?.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description;
                                }
                                <span title="@item.Description">@shortDesc</span>
                            </td>
                            <td>
                                @if (item.Status == "Open")
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">Chưa xử lý</span>
                                }
                                else if (item.Status == "Pending")
                                {

                                    <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3">Đang chờ</span>
                                }
                                else
                                {

                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Đã xong</span>
                                }
                            </td>
                            <td>
                                <span class="small text-muted">
                                    @(item.CreatedAt.HasValue? item.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "")
                                </span>
                            </td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-primary fw-bold btn-detail"
                                        data-id="@item.TicketId"
                                        data-username="@(item.User?.FullName)"
                                        data-email="@(item.User?.Email)"
                                        data-avatar="@avatarUrl"
                                        data-type="@item.QuestionType"
                                        data-date="@(item.CreatedAt.HasValue? item.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "")"
                                        data-desc="@item.Description"
                                        data-respondtype="@item.RespondType"
                                        data-status="@item.Status"
                                        data-response="@item.AdminResponse">
                                    Chi tiết
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="ticketModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-light">
                <h5 class="modal-title fw-bold text-dark">
                    <i class="fas fa-ticket-alt me-2 text-primary"></i>Chi Tiết Yêu Cầu #<span id="modalTicketID"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="replyForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="hiddenTicketId" />

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="d-flex align-items-center mb-3">
                                <img id="modalAvatar" src="" class="rounded-circle me-3" width="50" height="50">
                                <div>
                                    <h6 class="fw-bold mb-0" id="modalUserName">User Name</h6>
                                    <small class="text-muted" id="modalUserEmail">email@example.com</small>
                                </div>
                                <div class="ms-auto text-end">
                                    <span class="badge bg-light text-dark border" id="modalType">Type</span>
                                    <div class="small text-muted mt-1" id="modalDate">dd/mm/yyyy</div>
                                </div>
                            </div>

                            <div class="p-3 bg-light rounded-3 border mb-3">
                                <h6 class="fw-bold text-dark mb-2"><i class="fas fa-quote-left me-2 text-muted"></i>Nội dung câu hỏi:</h6>
                                <p class="mb-0 text-secondary" id="modalDesc">...</p>
                            </div>

                            <div class="d-flex gap-3 text-muted small mb-3">
                                <span><i class="fas fa-reply me-1"></i>Phản hồi qua: <strong id="modalRespondType" class="text-dark">Email</strong></span>
                            </div>
                        </div>

                        <hr>

                        <div class="col-md-12">
                            <h6 class="fw-bold text-primary mb-2">Phản Hồi Của Quản Trị Viên</h6>
                            <div class="mb-3">
                                <textarea class="form-control" id="adminResponse" rows="4" placeholder="Nhập câu trả lời hoặc ghi chú xử lý tại đây..."></textarea>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <label class="me-2 fw-bold small">Cập nhật trạng thái:</label>
                                    <select class="form-select form-select-sm w-auto" id="modalStatusSelect">
                                        <option value="Open">Chưa xử lý (Open)</option>
                                        <option value="Pending">Đang chờ (Pending)</option>
                                        <option value="Resolved">Đã xong (Resolved)</option>
                                    </select>
                                </div>
                                <button type="button" class="btn btn-primary px-4 fw-bold" onclick="submitReply()">
                                    <i class="fas fa-paper-plane me-2"></i>Gửi Phản Hồi
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/js/support.js"></script>
}