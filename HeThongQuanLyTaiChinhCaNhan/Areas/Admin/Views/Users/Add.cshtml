@model IEnumerable<HeThongQuanLyTaiChinhCaNhan.Models.User>

@{
    ViewData["Title"] = "Thêm người dùng";
    // Layout đã được tự động nhận từ _ViewStart, không cần khai báo lại
}
<link href="~/admin/css/addUser.css"/>
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold text-dark mb-0">Thêm Người Dùng</h3>
        <p class="text-muted small mb-0">Nhập thông tin user mới vào hệ thống QLTC</p>
    </div>
    <a href="/admin/users.html" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại
    </a>
</div>

<form id="createUserForm">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <h6 class="fw-bold text-muted">Ảnh Đại Diện (Avatar)</h6>
                    <div class="avatar-upload">
                        <div class="avatar-edit">
                            <input type='file' id="avatarInput" accept=".png, .jpg, .jpeg" />
                            <label for="avatarInput">
                                <i class="fas fa-pencil-alt text-muted"></i>
                            </label>
                        </div>
                        <div class="avatar-preview">
                            <div id="imagePreview"
                                 style="background-image: url(https://ui-avatars.com/api/?name=New+User&background=f0f0f0&color=999);">
                            </div>
                        </div>
                    </div>
                    <small class="text-muted fst-italic">Map với cột [AvatarUrl] trong DB</small>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h5 class="fw-bold text-primary m-0">
                        <i class="fas fa-user-circle me-2"></i>Thông
                        Tin Tài Khoản
                    </h5>
                </div>
                <div class="card-body pt-0">

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">
                                Email (Tên đăng nhập) <span class="text-danger">*</span>
                            </label>
                            <input type="email" class="form-control" id="email"
                                   placeholder="example@gmail.com" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Họ và Tên (FullName)</label>
                            <input type="text" class="form-control" id="fullName"
                                   placeholder="Nguyễn Văn A">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">
                                Mật khẩu (PasswordHash) <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" required>
                                <button class="btn btn-outline-secondary" type="button"
                                        onclick="togglePass('password')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">
                                Xác nhận mật khẩu <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="confirmPassword"
                                       required>
                                <button class="btn btn-outline-secondary" type="button"
                                        onclick="togglePass('confirmPassword')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25">

                    <h6 class="fw-bold text-muted mb-3 small text-uppercase">Thông tin cá nhân</h6>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Ngày sinh (DateOfBirth)</label>
                            <input type="date" class="form-control" id="dob">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Địa chỉ (Address)</label>
                            <input type="text" class="form-control" id="address"
                                   placeholder="123 Đường ABC...">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Thành phố (City)</label>
                            <input type="text" class="form-control" id="city" placeholder="Hồ Chí Minh">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Quốc gia (Country)</label>
                            <input type="text" class="form-control" id="country" value="Việt Nam">
                        </div>
                    </div>

                    <hr class="text-muted opacity-25">

                    <h6 class="fw-bold text-muted mb-3 small text-uppercase">Cấu hình hệ thống</h6>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Phân quyền (Role)</label>
                            <select class="form-select" id="role">
                                <option value="User" selected>User (Người dùng)</option>
                                <option value="Admin">Admin (Quản trị viên)</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Trạng thái (IsActive)</label>
                            <select class="form-select" id="isActive">
                                <option value="1" selected>Active (Đang hoạt động)</option>
                                <option value="0">Locked (Đang bị khóa)</option>
                            </select>
                        </div>
                    </div>

                    <div class="mt-4 text-end">
                        <button type="reset" class="btn btn-light me-2">Làm mới</button>
                        <button type="submit" class="btn btn-primary px-5 shadow-sm fw-bold">
                            <i class="fas fa-save me-2"></i>Lưu Dữ Liệu
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <script src="~/admin/js/addUser.js"></script>
}