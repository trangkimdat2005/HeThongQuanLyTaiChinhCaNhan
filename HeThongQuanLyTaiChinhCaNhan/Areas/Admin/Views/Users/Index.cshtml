@model IEnumerable<HeThongQuanLyTaiChinhCaNhan.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
    // Layout đã được tự động nhận từ _ViewStart, không cần khai báo lại
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold text-dark mb-0">Danh Sách Người Dùng</h3>
        <p class="text-muted small mb-0">Quản lý toàn bộ tài khoản hệ thống</p>
    </div>
    <a class="btn btn-success shadow-sm" href="/admin/addUser.html">
        <i class="fas fa-plus me-2"></i>Thêm Mới
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <table id="tableUser" class="table table-hover align-middle" style="width:100%">
            <thead class="bg-light">
                <tr>
                    <th>ID</th>
                    <th>Người dùng</th>
                    <th>Email</th>
                    <th>Quyền</th>
                    <th>Trạng thái</th>
                    <th>Ngày tham gia</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/admin/js/user.js"></script>
}