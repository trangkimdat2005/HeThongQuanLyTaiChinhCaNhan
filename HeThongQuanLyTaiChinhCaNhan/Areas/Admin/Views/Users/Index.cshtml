@model IEnumerable<HeThongQuanLyTaiChinhCaNhan.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold text-dark mb-0">Danh Sách Người Dùng</h3>
        <p class="text-muted small mb-0">Quản lý toàn bộ tài khoản hệ thống</p>
    </div>
    <a class="btn btn-success shadow-sm" href="/Admin/Users/Add">
        <i class="fas fa-plus me-2"></i>Thêm Mới
    </a>
</div>
@Html.AntiForgeryToken()
<div class="card border-0 shadow-sm">
    <div class="card-body">
        <table id="tableUser" class="table table-hover align-middle" style="width:100%">
            <thead class="bg-light">
                <tr>
                    <th>ID</th>
                    <th>Người dùng</th>
                    <th>Email</th>
                    <th>Quyền</th>
                    <th>Trạng thái</th>
                    <th>Ngày tham gia</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="fw-bold text-muted">#@item.UserId</span></td>

                            <td>
                                @{
                                    // Logic màu nền avatar: Admin thì đen, User thì xanh
                                    var bgColor = item.Role == "Admin" ? "212529" : "3b7ddd";
                                    var nameDisplay = item.FullName ?? "Chưa đặt tên";
                                }
                                <div class="d-flex align-items-center">
                                    <img src="https://ui-avatars.com/api/?name=@nameDisplay&background=@bgColor&color=fff" class="rounded-circle me-2" width="35">
                                    <span class="fw-bold text-dark">@nameDisplay</span>
                                </div>
                            </td>

                            <td>@item.Email</td>

                            <td>
                                @if (item.Role == "Admin")
                                {
                                    <span class="badge bg-primary">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark border">User</span>
                                }
                            </td>

                            <td>
                                @if (item.IsActive == true)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">Banned</span>
                                }
                            </td>

                            <td>
                                @(item.CreatedAt.HasValue? item.CreatedAt.Value.ToString("dd/MM/yyyy") : "")
                            </td>

                            <td class="text-end">
                                <a class="btn btn-sm btn-light text-primary me-1" title="Sửa" href="/Admin/Users/Edit/@item.UserId">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="btn btn-sm btn-light text-danger"
                                        onclick="deleteUser('@item.UserId', '@item.FullName')"
                                        title="Xóa">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/admin/js/user.js"></script>
}