@model HeThongQuanLyTaiChinhCaNhan.Models.User

@{
    ViewData["Title"] = "Hồ Sơ Của Tôi";
    // Avatar mặc định
    var avatarUrl = !string.IsNullOrEmpty(Model.AvatarUrl) ? Model.AvatarUrl : $"https://ui-avatars.com/api/?name={Model.FullName}&background=3b7ddd&color=fff";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold text-dark mb-0">Hồ Sơ Của Tôi</h3>
        <p class="text-muted small mb-0">Quản lý thông tin cá nhân</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card border-0 shadow-sm text-center h-100">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div class="position-relative mb-3">
                    <img src="@avatarUrl" class="rounded-circle border border-3 border-white shadow-sm" width="120" height="120" id="profileAvatar" style="object-fit: cover;">
                    <label for="uploadAvatar" class="position-absolute bottom-0 end-0 bg-white rounded-circle shadow-sm p-2 border cursor-pointer" style="cursor: pointer;">
                        <i class="fas fa-camera text-primary"></i>
                    </label>
                </div>
                <h5 class="fw-bold text-dark mb-1" id="displayFullName">@Model.FullName</h5>
                <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-1 rounded-pill mb-3">@Model.Role</span>

                <div class="text-muted small">
                    <i class="fas fa-calendar-alt me-1"></i> Tham gia: @Model.CreatedAt?.ToString("dd/MM/yyyy")
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 border-bottom-0">
                <ul class="nav nav-tabs card-header-tabs" id="profileTab" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active fw-bold" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button">Thông tin chung</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link fw-bold text-danger" id="security-tab" data-bs-toggle="tab" data-bs-target="#security" type="button">Đổi mật khẩu</button>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="profileTabContent">

                    <div class="tab-pane fade show active" id="info" role="tabpanel">
                        <form id="updateProfileForm" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()

                            <input type="file" id="uploadAvatar" name="avatar" class="d-none" accept="image/*">

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold">Email</label>
                                    <input type="email" class="form-control bg-light" value="@Model.Email" readonly>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold">Họ và tên</label>
                                    <input type="text" class="form-control" name="fullName" id="fullName" value="@Model.FullName" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold">Ngày sinh</label>
                                    <input type="date" class="form-control" name="dob" value="@(Model.DateOfBirth?.ToString("yyyy-MM-dd"))">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold">Thành phố</label>
                                    <input type="text" class="form-control" name="city" value="@Model.City">
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label small fw-bold">Địa chỉ</label>
                                    <input type="text" class="form-control" name="address" value="@Model.Address">
                                </div>

                                <div class="col-12 text-end mt-4">
                                    <button type="submit" class="btn btn-primary fw-bold shadow-sm">
                                        <i class="fas fa-save me-2"></i>Lưu Thay Đổi
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="tab-pane fade" id="security" role="tabpanel">
                        <form id="changePassForm">
                            @Html.AntiForgeryToken()
                            <div class="alert alert-warning border-0 mb-3">
                                <i class="fas fa-lock me-2"></i> Mật khẩu mới sẽ được mã hóa an toàn.
                            </div>
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Mật khẩu hiện tại</label>
                                <input type="password" class="form-control" name="currentPass" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Mật khẩu mới</label>
                                <input type="password" class="form-control" name="newPass" id="newPass" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Xác nhận mật khẩu mới</label>
                                <input type="password" class="form-control" id="confirmPass" required>
                            </div>
                            <div class="text-end mt-4">
                                <button type="submit" class="btn btn-danger fw-bold shadow-sm">
                                    <i class="fas fa-key me-2"></i>Đổi Mật Khẩu
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/js/account.js"></script>
}