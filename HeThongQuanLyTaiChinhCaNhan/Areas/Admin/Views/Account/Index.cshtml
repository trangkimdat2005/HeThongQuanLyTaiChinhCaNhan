@{

}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold text-dark mb-0">Hồ Sơ Của Tôi</h3>
        <p class="text-muted small mb-0">Quản lý thông tin cá nhân của quản trị viên</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card border-0 shadow-sm text-center h-100">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div class="position-relative mb-3">
                    <img src="https://ui-avatars.com/api/?name=Admin+Root&background=3b7ddd&color=fff"
                         class="rounded-circle border border-3 border-white shadow-sm" width="120"
                         height="120" id="profileAvatar">
                    <label for="uploadAvatar"
                           class="position-absolute bottom-0 end-0 bg-white rounded-circle shadow-sm p-2 border cursor-pointer"
                           style="cursor: pointer;">
                        <i class="fas fa-camera text-primary"></i>
                        <input type="file" id="uploadAvatar" class="d-none" accept="image/*">
                    </label>
                </div>
                <h5 class="fw-bold text-dark mb-1" id="profileName">Admin Root</h5>
                <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-1 rounded-pill mb-3">Administrator</span>

                <div class="d-flex justify-content-center gap-2 w-100 px-4">
                    <div class="text-center px-3 border-end">
                        <h6 class="fw-bold mb-0">12</h6>
                        <small class="text-muted" style="font-size: 0.75rem;">Tháng hoạt động</small>
                    </div>
                    <div class="text-center px-3">
                        <h6 class="fw-bold mb-0">Active</h6>
                        <small class="text-muted" style="font-size: 0.75rem;">Trạng thái</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 border-bottom-0">
                <ul class="nav nav-tabs card-header-tabs" id="profileTab" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active fw-bold" id="info-tab" data-bs-toggle="tab"
                                data-bs-target="#info" type="button">
                            Thông tin chung
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link fw-bold text-danger" id="security-tab"
                                data-bs-toggle="tab" data-bs-target="#security" type="button">
                            Đổi mật
                            khẩu
                        </button>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="profileTabContent">

                    <div class="tab-pane fade show active" id="info" role="tabpanel">
                        <form id="updateProfileForm">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold">User ID</label>
                                    <input type="text" class="form-control bg-light" value="admin-01"
                                           readonly>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold">Email đăng nhập</label>
                                    <input type="email" class="form-control bg-light"
                                           value="admin@test.com" readonly>
                                    <div class="form-text">Liên hệ bộ phận IT để đổi email.</div>
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label small fw-bold">Họ và tên</label>
                                    <input type="text" class="form-control" value="Quản Trị Viên">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold">Ngày sinh</label>
                                    <input type="date" class="form-control" value="1990-01-01">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold">Số điện thoại</label>
                                    <input type="text" class="form-control" value="0988777666">
                                </div>
                                <div class="col-12 text-end mt-4">
                                    <button type="submit" class="btn btn-primary fw-bold shadow-sm">
                                        <i class="fas fa-save me-2"></i>Lưu Thông Tin
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="tab-pane fade" id="security" role="tabpanel">
                        <form id="changePassForm">
                            <div class="alert alert-warning border-0 d-flex align-items-center"
                                 role="alert">
                                <i class="fas fa-shield-alt me-2 fs-4"></i>
                                <div>
                                    <div class="fw-bold">Lưu ý bảo mật</div>
                                    <small>
                                        Mật khẩu nên có ít nhất 8 ký tự, bao gồm chữ hoa và
                                        số.
                                    </small>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label small fw-bold">Mật khẩu hiện tại</label>
                                <input type="password" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Mật khẩu mới</label>
                                <input type="password" class="form-control" id="newPass" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Xác nhận mật khẩu mới</label>
                                <input type="password" class="form-control" id="confirmPass" required>
                            </div>

                            <div class="text-end mt-4">
                                <button type="submit" class="btn btn-danger fw-bold shadow-sm">
                                    <i class="fas fa-key me-2"></i>Cập Nhật Mật Khẩu
                                </button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/admin/js/account.js"></script>
}