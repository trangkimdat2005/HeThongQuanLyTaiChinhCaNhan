@{
    ViewData["Title"] = "Tổng quan";
}

<div class="mb-4">
    <h3 class="fw-bold text-dark">Tổng Quan Hệ Thống</h3>
    <p class="text-muted mb-0">Báo cáo tình hình hoạt động đến ngày 11/01/2026</p>
</div>

<div class="row g-4 mb-4">
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div>
                        <h6 class="text-muted text-uppercase fw-semibold mb-1">Tổng Người Dùng</h6>
                        <h2 class="mb-0 fw-bold text-primary">1,250</h2>
                    </div>
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                        <i class="fas fa-users fa-2x text-primary"></i>
                    </div>
                </div>
                <div class="small text-muted">
                    <i class="fas fa-arrow-up text-success me-1"></i>
                    <span class="text-success fw-bold">12%</span> so với tháng trước
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div>
                        <h6 class="text-muted text-uppercase fw-semibold mb-1">Giao Dịch Mới (T1)</h6>
                        <h2 class="mb-0 fw-bold text-success">8,500+</h2>
                    </div>
                    <div class="rounded-circle bg-success bg-opacity-10 p-3">
                        <i class="fas fa-exchange-alt fa-2x text-success"></i>
                    </div>
                </div>
                <div class="small text-muted">
                    <span class="fw-bold text-dark">Volume:</span> ~ 25 Tỷ VNĐ
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div>
                        <h6 class="text-muted text-uppercase fw-semibold mb-1">User Mới (Tháng 1)</h6>
                        <h2 class="mb-0 fw-bold text-info">145</h2>
                    </div>
                    <div class="rounded-circle bg-info bg-opacity-10 p-3">
                        <i class="fas fa-user-plus fa-2x text-info"></i>
                    </div>
                </div>
                <div class="small text-muted">
                    Hôm nay: <span class="fw-bold text-dark">+12</span> người
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100 bg-danger bg-opacity-10">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div>
                        <h6 class="text-danger text-uppercase fw-semibold mb-1">Ticket Đang Chờ</h6>
                        <h2 class="mb-0 fw-bold text-danger">3</h2>
                    </div>
                    <div class="rounded-circle bg-white p-3">
                        <i class="fas fa-headset fa-2x text-danger"></i>
                    </div>
                </div>
                <div class="small text-danger fw-bold">
                    Cần xử lý ngay!
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-xl-8 col-lg-7">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0 fw-bold text-dark">Tăng Trưởng Người Dùng (6 tháng)</h5>
                <div class="dropdown">
                    <button class="btn btn-light btn-sm rounded-circle" type="button"
                            data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v text-muted"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                        <li><a class="dropdown-item" href="#">Xem báo cáo chi tiết</a></li>
                        <li><a class="dropdown-item" href="#">Xuất Excel</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <canvas id="userGrowthChart" height="300"></canvas>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-lg-5">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0 fw-bold text-dark">Tỷ Lệ Dòng Tiền Hệ Thống</h5>
            </div>
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div style="height: 250px; width: 100%;">
                    <canvas id="transactionTypeChart"></canvas>
                </div>
                <div class="mt-3 text-center small text-muted">
                    *Số liệu dựa trên tổng giao dịch tháng hiện tại
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 py-3">
        <h5 class="card-title mb-0 fw-bold text-dark">Người Dùng Mới Đăng Ký Gần Đây</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted small text-uppercase">
                    <tr>
                        <th class="ps-4 border-0">User ID</th>
                        <th class="border-0">Họ Tên / Email</th>
                        <th class="border-0">Ngày tham gia</th>
                        <th class="border-0">Trạng thái</th>
                        <th class="border-0 text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="ps-4 fw-bold text-primary">#U-1250</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="https://ui-avatars.com/api/?name=Nguyen+Van+A&background=random"
                                     class="rounded-circle me-2" width="35">
                                <div>
                                    <div class="fw-bold text-dark">Nguyễn Văn A</div>
                                    <div class="small text-muted">nguyenvana@email.com</div>
                                </div>
                            </div>
                        </td>
                        <td class="text-muted small">11/01/2026 10:30 AM</td>
                        <td>
                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Active</span>
                        </td>
                        <td class="text-end pe-4">
                            <button class="btn btn-sm btn-light text-primary rounded-circle">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4 fw-bold text-primary">#U-1249</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="https://ui-avatars.com/api/?name=Tran+Thi+B&background=random"
                                     class="rounded-circle me-2" width="35">
                                <div>
                                    <div class="fw-bold text-dark">Trần Thị B</div>
                                    <div class="small text-muted">tranthib@email.com</div>
                                </div>
                            </div>
                        </td>
                        <td class="text-muted small">11/01/2026 09:15 AM</td>
                        <td>
                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Active</span>
                        </td>
                        <td class="text-end pe-4">
                            <button class="btn btn-sm btn-light text-primary rounded-circle">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4 fw-bold text-primary">#U-1248</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="https://ui-avatars.com/api/?name=Spammer+Guy&background=000&color=fff"
                                     class="rounded-circle me-2" width="35">
                                <div>
                                    <div class="fw-bold text-dark">Spammer Guy</div>
                                    <div class="small text-muted">spam@rac.com</div>
                                </div>
                            </div>
                        </td>
                        <td class="text-muted small">10/01/2026 23:45 PM</td>
                        <td>
                            <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">Banned</span>
                        </td>
                        <td class="text-end pe-4">
                            <button class="btn btn-sm btn-light text-primary rounded-circle">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-white border-0 text-center py-3">
            <a href="/admin/users.html" class="text-decoration-none fw-bold small">
                Xem tất cả người dùng <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/admin/js/dashboard.js"></script>
}