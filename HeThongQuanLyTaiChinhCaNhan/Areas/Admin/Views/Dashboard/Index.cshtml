@model HeThongQuanLyTaiChinhCaNhan.ViewModels.DashboardVM

@{
    ViewData["Title"] = "Tổng quan";
}

<div class="mb-4">
    <h3 class="fw-bold text-dark">Tổng Quan Hệ Thống</h3>
    <p class="text-muted mb-0">Báo cáo tình hình hoạt động đến ngày @DateTime.Now.ToString("dd/MM/yyyy")</p>
</div>

<div class="row g-4 mb-4">
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div>
                        <h6 class="text-muted text-uppercase fw-semibold mb-1">Tổng Người Dùng</h6>
                        <h2 class="mb-0 fw-bold text-primary">@Model.TotalUsers.ToString("N0")</h2>
                    </div>
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                        <i class="fas fa-users fa-2x text-primary"></i>
                    </div>
                </div>
                <div class="small text-muted">
                    <span class="text-success fw-bold">Active</span> toàn hệ thống
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div>
                        <h6 class="text-muted text-uppercase fw-semibold mb-1">Giao Dịch (Tháng @DateTime.Now.Month)</h6>
                        <h2 class="mb-0 fw-bold text-success">@Model.NewTransactionsCount.ToString("N0")</h2>
                    </div>
                    <div class="rounded-circle bg-success bg-opacity-10 p-3">
                        <i class="fas fa-exchange-alt fa-2x text-success"></i>
                    </div>
                </div>
                <div class="small text-muted">
                    <span class="fw-bold text-dark">Volume:</span> ~ @(Model.TotalVolume / 1000000) M VNĐ
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div>
                        <h6 class="text-muted text-uppercase fw-semibold mb-1">User Mới (Tháng @DateTime.Now.Month)</h6>
                        <h2 class="mb-0 fw-bold text-info">@Model.NewUsersCount</h2>
                    </div>
                    <div class="rounded-circle bg-info bg-opacity-10 p-3">
                        <i class="fas fa-user-plus fa-2x text-info"></i>
                    </div>
                </div>
                <div class="small text-muted">
                    Hôm nay: <span class="fw-bold text-dark">+@Model.NewUsersToday</span> người
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100 bg-danger bg-opacity-10">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div>
                        <h6 class="text-danger text-uppercase fw-semibold mb-1">Ticket Đang Chờ</h6>
                        <h2 class="mb-0 fw-bold text-danger">@Model.PendingTickets</h2>
                    </div>
                    <div class="rounded-circle bg-white p-3">
                        <i class="fas fa-headset fa-2x text-danger"></i>
                    </div>
                </div>
                <div class="small text-danger fw-bold">
                    @(Model.PendingTickets > 0 ? "Cần xử lý ngay!" : "Hệ thống ổn định")
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-xl-8 col-lg-7">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0 fw-bold text-dark">Tăng Trưởng Người Dùng (6 tháng)</h5>
            </div>
            <div class="card-body">
                <canvas id="userGrowthChart" height="300"></canvas>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-lg-5">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0 fw-bold text-dark">Tỷ Lệ Dòng Tiền (Tháng @DateTime.Now.Month)</h5>
            </div>
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div style="height: 250px; width: 100%;">
                    <canvas id="transactionTypeChart"></canvas>
                </div>
                @if (Model.TotalIncome == 0 && Model.TotalExpense == 0)
                {
                    <div class="mt-3 text-muted small">Chưa có giao dịch nào trong tháng này.</div>
                }
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 py-3">
        <h5 class="card-title mb-0 fw-bold text-dark">Người Dùng Mới Đăng Ký Gần Đây</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted small text-uppercase">
                    <tr>
                        <th class="ps-4 border-0">Email</th>
                        <th class="border-0">Họ Tên</th>
                        <th class="border-0">Ngày tham gia</th>
                        <th class="border-0">Trạng thái</th>
                        <th class="border-0 text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.RecentUsers)
                    {
                        var avatar = !string.IsNullOrEmpty(user.AvatarUrl) ? user.AvatarUrl : $"https://ui-avatars.com/api/?name={user.FullName}&background=random";
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <img src="@avatar" class="rounded-circle me-2" width="35" height="35">
                                    <div class="small text-muted">@user.Email</div>
                                </div>
                            </td>
                            <td class="fw-bold text-dark">@user.FullName</td>
                            <td class="text-muted small">@user.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (user.IsActive == true)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">Locked</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a href="/Admin/Users/Edit?id=@user.UserId" class="btn btn-sm btn-light text-primary rounded-circle">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-white border-0 text-center py-3">
            <a href="/Admin/Users" class="text-decoration-none fw-bold small">
                Xem tất cả người dùng <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Dữ liệu Biểu đồ Tăng trưởng
        var growthLabels = @Html.Raw(Json.Serialize(Model.GrowthLabels));
        var growthData = @Html.Raw(Json.Serialize(Model.GrowthData));

        // Dữ liệu Biểu đồ Thu/Chi
        var incomeData = @Model.TotalIncome;
        var expenseData = @Model.TotalExpense;
    </script>

    <script src="~/admin/js/dashboard.js"></script>
}