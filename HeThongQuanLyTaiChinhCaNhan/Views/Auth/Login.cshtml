@model HeThongQuanLyTaiChinhCaNhan.ViewModels.MoneyMaster.ViewModels.LoginVM

@{
    Layout = null;
    ViewData["Title"] = "Đăng Nhập - MoneyMaster";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden; /* Tránh thanh cuộn khi animation chạy */
        }

        .card-container {
            width: 100%;
            max-width: 450px;
            perspective: 1000px; /* Tạo chiều sâu cho 3D nếu cần */
        }

        .card-login {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            overflow: hidden;
            position: relative;
            /* Animation chiều cao mượt mà */
            transition: height 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .card-body-login {
            padding: 40px;
        }

        /* --- LOGIC ANIMATION --- */
        .forms-wrapper {
            position: relative;
            width: 100%;
            /* Chiều cao sẽ được set bằng JS */
        }

        .form-section {
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
            opacity: 0;
            visibility: hidden;
            transform: translateX(50px); /* Mặc định lệch phải */
            transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

            /* Class kích hoạt form đang hiển thị */
            .form-section.active {
                opacity: 1;
                visibility: visible;
                transform: translateX(0);
                position: relative; /* Để nó chiếm không gian thật */
                z-index: 2;
            }

            /* Class cho form bị ẩn sang trái */
            .form-section.slide-left {
                transform: translateX(-50px);
                opacity: 0;
                visibility: hidden;
                position: absolute;
            }

            /* Class cho form bị ẩn sang phải (mặc định) */
            .form-section.slide-right {
                transform: translateX(50px);
                opacity: 0;
                visibility: hidden;
                position: absolute;
            }

        /* --- Style Input đẹp hơn --- */
        .form-control {
            border-radius: 12px;
            padding: 12px 15px;
            border: 2px solid #f1f3f9;
            background-color: #f8f9fc;
            font-size: 0.95rem;
            transition: all 0.3s;
        }

            .form-control:focus {
                background-color: #fff;
                border-color: #4e73df;
                box-shadow: 0 0 0 4px rgba(78, 115, 223, 0.1);
            }

        .btn-custom {
            border-radius: 12px;
            padding: 12px;
            font-weight: 600;
            letter-spacing: 0.5px;
            background: #4e73df;
            border: none;
            width: 100%;
            color: white;
            margin-top: 10px;
            transition: transform 0.2s;
        }

            .btn-custom:active {
                transform: scale(0.98);
            }

            .btn-custom:hover {
                background: #2e59d9;
                color: white;
            }

        .icon-circle {
            width: 80px;
            height: 80px;
            background: rgba(78, 115, 223, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            color: #4e73df;
        }
    </style>
</head>

<body>
    <div class="card-container">
        <div class="card-login" id="mainCard">
            <div class="card-body-login">

                <div id="alertArea">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success small text-center border-0 bg-success bg-opacity-10 text-success rounded-3 mb-4">
                            <i class="fas fa-check-circle me-1"></i> @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ForgotPasswordSuccess"] != null)
                    {
                        <div class="alert alert-info small text-center border-0 bg-info bg-opacity-10 text-info rounded-3 mb-4">
                            <i class="fas fa-info-circle me-1"></i> @TempData["ForgotPasswordSuccess"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger small text-center border-0 bg-danger bg-opacity-10 text-danger rounded-3 mb-4">
                            <i class="fas fa-exclamation-circle me-1"></i> @TempData["ErrorMessage"]
                        </div>
                    }
                </div>

                <div class="forms-wrapper">

                    <div id="loginForm" class="form-section active">
                        <div class="text-center mb-4">
                            <div class="icon-circle"><i class="fas fa-wallet fa-2x"></i></div>
                            <h4 class="fw-bold text-dark">Đăng Nhập</h4>
                            <p class="text-muted small">Chào mừng bạn trở lại MoneyMaster</p>
                        </div>

                        <form asp-controller="Auth" asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger small text-center mb-2"></div>

                            <div class="mb-3">
                                <label class="small fw-bold text-muted ms-1">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 rounded-start-3 ps-3"><i class="fas fa-envelope text-muted"></i></span>
                                    <input asp-for="Email" class="form-control border-start-0 ps-2" placeholder="name@example.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small ms-2"></span>
                            </div>

                            <div class="mb-3">
                                <label class="small fw-bold text-muted ms-1">Mật khẩu</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 rounded-start-3 ps-3"><i class="fas fa-lock text-muted"></i></span>
                                    <input asp-for="Password" type="password" class="form-control border-start-0 border-end-0 ps-2" placeholder="••••••" id="passwordInput" />
                                    <span class="input-group-text bg-light border-0 rounded-end-3 pe-3" style="cursor:pointer" onclick="togglePass()">
                                        <i class="fas fa-eye text-muted" id="eyeIcon"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small ms-2"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4 small">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe" value="true">
                                    <label class="form-check-label text-muted" for="rememberMe">Ghi nhớ tôi</label>
                                </div>
                                <a href="javascript:void(0)" onclick="goToForgot()" class="text-primary fw-bold text-decoration-none hover-underline">Quên mật khẩu?</a>
                            </div>

                            <button type="submit" class="btn btn-custom shadow-sm">
                                ĐĂNG NHẬP <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </form>

                        <div class="text-center mt-4 pt-2 border-top">
                            <span class="small text-muted">Chưa có tài khoản?</span>
                            <a href="/Auth/Register" class="small fw-bold text-primary text-decoration-none ms-1">Đăng ký ngay</a>
                        </div>
                    </div>

                    <div id="forgotForm" class="form-section slide-right">
                        <div class="text-center mb-4">
                            <div class="icon-circle bg-warning bg-opacity-10 text-warning">
                                <i class="fas fa-key fa-2x"></i>
                            </div>
                            <h4 class="fw-bold text-dark">Quên Mật Khẩu?</h4>
                            <p class="text-muted small">Đừng lo! Nhập email để lấy lại quyền truy cập.</p>
                        </div>

                        <form asp-controller="Auth" asp-action="ForgotPassword" method="post">
                            @Html.AntiForgeryToken()
                            <div class="mb-4">
                                <label class="small fw-bold text-muted ms-1">Email đăng ký</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 rounded-start-3 ps-3"><i class="fas fa-envelope text-muted"></i></span>
                                    <input type="email" name="email" class="form-control border-start-0 ps-2" placeholder="name@example.com" required />
                                </div>
                            </div>

                            <button type="submit" class="btn btn-custom bg-warning border-0 text-dark shadow-sm">
                                <i class="fas fa-paper-plane me-2"></i> GỬI YÊU CẦU
                            </button>
                        </form>

                        <div class="text-center mt-4">
                            <a href="javascript:void(0)" onclick="goToLogin()" class="small text-muted text-decoration-none fw-bold">
                                <i class="fas fa-chevron-left me-1"></i> Quay lại Đăng nhập
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const loginForm = document.getElementById('loginForm');
        const forgotForm = document.getElementById('forgotForm');
        const card = document.getElementById('mainCard');

        // Hàm điều chỉnh chiều cao Card cho mượt
        function adjustHeight(targetElement) {
            // Lấy chiều cao thực tế của form đích
            // Ta phải clone nó hoặc tạm thời bỏ display:none để đo, nhưng ở đây dùng position:absolute nên đo được luôn nếu visible
            // Cách đơn giản: set height auto
            // Tuy nhiên để transition height hoạt động, ta cần set px cụ thể.

            // Do form đang absolute/relative lẫn lộn khi transition, ta dùng setTimeout nhẹ
            setTimeout(() => {
                const height = targetElement.offsetHeight + 80; // + padding trên dưới
                // card.style.height = height + 'px';
                // Ở layout này dùng flow tự nhiên của Relative position nên height tự nhận.
                // Tuy nhiên để mượt, ta chỉ cần class transition.
            }, 50);
        }

        function goToForgot() {
            // Login trượt sang trái
            loginForm.classList.remove('active');
            loginForm.classList.add('slide-left');

            // Forgot trượt từ phải vào
            forgotForm.classList.remove('slide-right');
            forgotForm.classList.add('active');
        }

        function goToLogin() {
            // Forgot trượt về phải
            forgotForm.classList.remove('active');
            forgotForm.classList.add('slide-right');

            // Login trượt từ trái về
            loginForm.classList.remove('slide-left');
            loginForm.classList.add('active');
        }

        function togglePass() {
            const passInput = document.getElementById('passwordInput');
            const eyeIcon = document.getElementById('eyeIcon');
            if (passInput.type === 'password') {
                passInput.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                passInput.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        }

        // Tự động chuyển tab nếu vừa submit forgot password xong
        @if (TempData["ForgotPasswordSuccess"] != null)
        {
                <text>
                // Giữ nguyên ở màn hình Forgot để đọc thông báo, hoặc chuyển về Login tùy ý.
                // Ở đây tôi cho về Login để user đăng nhập luôn cho tiện (kịch bản báo thành công rồi)
                // Nếu muốn giữ ở Forgot thì gọi: goToForgot();
                </text>
        }
    </script>
</body>
</html>