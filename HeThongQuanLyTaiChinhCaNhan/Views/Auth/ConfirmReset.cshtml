@{
    Layout = null;
    ViewData["Title"] = "Mật khẩu mới";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Cấp Mật Khẩu Mới</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: sans-serif;
        }

        .card-result {
            background: white;
            border-radius: 15px;
            padding: 40px;
            width: 100%;
            max-width: 500px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .new-pass-box {
            background: #f8f9fc;
            border: 2px dashed #4e73df;
            padding: 15px;
            font-size: 1.5rem;
            font-weight: bold;
            letter-spacing: 2px;
            color: #4e73df;
            margin: 20px 0;
            border-radius: 10px;
            position: relative;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center">
            <div class="card-result animate__animated animate__fadeIn">
                <div class="mb-3 text-success">
                    <i class="fas fa-check-circle fa-4x"></i>
                </div>
                <h3 class="fw-bold text-dark">Thành Công!</h3>
                <p class="text-muted">Mật khẩu của bạn đã được đặt lại.</p>

                <p class="small text-danger mb-1 fw-bold">Vui lòng sao chép mật khẩu này ngay:</p>

                <div class="new-pass-box">
                    <span id="passText">@ViewBag.NewPassword</span>
                    <button class="btn btn-sm btn-outline-primary position-absolute top-50 end-0 translate-middle-y me-2 border-0" onclick="copyToClipboard()" title="Copy">
                        <i class="fas fa-copy"></i>
                    </button>
                </div>

                <p class="small text-muted mb-4">
                    Vì lý do bảo mật, hãy đăng nhập và đổi lại mật khẩu theo ý bạn ngay sau khi truy cập.
                </p>

                <a href="/Auth/Login" class="btn btn-primary w-100 rounded-pill fw-bold py-2">
                    <i class="fas fa-sign-in-alt me-2"></i>Đến trang Đăng Nhập
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function copyToClipboard() {
            var copyText = document.getElementById("passText").innerText;
            navigator.clipboard.writeText(copyText).then(function() {
                const Toast = Swal.mixin({
                    toast: true, position: 'top-end', showConfirmButton: false, timer: 1500, timerProgressBar: true
                });
                Toast.fire({ icon: 'success', title: 'Đã copy mật khẩu!' });
            });
        }
    </script>
</body>
</html>