@model HeThongQuanLyTaiChinhCaNhan.ViewModels.MoneyMaster.ViewModels.RegisterVM

@{
    Layout = null;
    ViewData["Title"] = "Đăng Ký - MoneyMaster";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/css/register.css" rel="stylesheet" />
</head>

<body>
    <div class="card card-register animate__animated animate__fadeInUp">

        <div class="card-header-reg">
            <h4 class="fw-bold text-dark" id="headerTitle">Tạo Tài Khoản</h4>
            <p class="text-muted small mb-0" id="headerSub">Bắt đầu hành trình quản lý tài chính ngay hôm nay!</p>
        </div>

        <div class="card-body-reg">

            <form id="step1Form">
                @Html.AntiForgeryToken()
                <div class="mb-3 position-relative">
                    <i class="fas fa-user input-icon"></i>
                    <input asp-for="FullName" class="form-control" placeholder="Họ và tên đầy đủ" required>
                </div>

                <div class="mb-3 position-relative">
                    <i class="fas fa-envelope input-icon"></i>
                    <input asp-for="Email" class="form-control" placeholder="Địa chỉ Email" required>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-sm-6 position-relative">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" required>
                    </div>
                    <div class="col-sm-6 position-relative">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại MK" required>
                    </div>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-register">
                        <i class="fas fa-arrow-right me-2"></i>Tiếp Tục
                    </button>
                </div>

                <div class="text-center small">
                    <span class="text-muted">Đã có tài khoản?</span>
                    <a href="/auth/login" class="text-decoration-none fw-bold text-primary ms-1">Đăng nhập ngay</a>
                </div>
            </form>

            <form id="step2Form" style="display:none;" class="fade-in">
                <div class="text-center mb-4">
                    <div class="mb-3 text-primary">
                        <i class="fas fa-envelope-open-text fa-3x"></i>
                    </div>
                    <p class="text-muted small">
                        Chúng tôi đã gửi mã xác thực 6 số đến email: <br>
                        <strong id="displayEmail" class="text-dark">...</strong>
                    </p>
                </div>

                <div class="mb-4">
                    <input type="text" id="otpCode" class="form-control otp-input" placeholder="000000" maxlength="6" required>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-register btn-success">
                        <i class="fas fa-check-circle me-2"></i>Xác Thực & Hoàn Tất
                    </button>
                </div>

                <div class="text-center">
                    <button type="button" class="btn btn-link text-decoration-none small text-muted" onclick="backToStep1()">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại / Gửi lại
                    </button>
                </div>
            </form>

            <div class="text-center mt-3" id="homeLink">
                <a href="/" class="text-decoration-none small text-muted">
                    <i class="fas fa-arrow-left me-1"></i> Về trang chủ
                </a>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script src="~/js/register.js"></script>
</body>
</html>